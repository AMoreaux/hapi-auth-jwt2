{
    "parser": "babel-eslint",
    "extends": "eslint-config-hapi",
    "rules": {
        "hapi/hapi-capitalize-modules": "off",
        "semi": [2, "always"],
        "linebreak-style": 2,
        "no-bitwise": 2,
        "no-cond-assign": 0,
        "curly": 2,
        "eqeqeq": 2,
        "no-eq-null": 0,
        "no-eval": 0,
        "no-unused-expressions": 0,
        "guard-for-in": 0,
        "wrap-iife": [2, "any"],
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-use-before-define": [
            2,
            {
                "functions": false
            }
        ],
        "no-loop-func": 0,
        "no-caller": 2,
        "strict": 0,
        "no-script-url": 2,
        "no-shadow": 2,
        "no-new-func": 0,
        "no-new-wrappers": 0,
        "dot-notation": 0,
        "no-undef": 2
    },
    "env": {
        "node": true
    }
}
